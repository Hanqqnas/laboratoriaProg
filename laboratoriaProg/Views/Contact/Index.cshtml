@model List<ContactModel>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>
<h4>Lista kontaktów</h4>
@if (Model.Count > 0)
{
    <table class="table">
        <thread>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m[0].Category)
                </th>
                <th class="text-end">Operacje</th>
            </tr>
        </thread>
        <tbody>
        @foreach (var entry in @Model)
        {
            <tr>
                <td>
                    @entry.FirstName
                </td>
                <td>
                    @entry.LastName
                </td>
                <td>
                    @entry.Category.GetDisplayName()
                </td>
                <td>
                    <div class="float-end">
                        <a
                            asp-route-id=@entry.Id
                            class="btn btn-success"
                            asp-action="Edit"
                            asp-controller="Contact">
                            Edytuj
                        </a>
                        <a
                            class="btn btn-info"
                            asp-route-id=@entry.Id
                            asp-action="Details"
                            asp-controller="Contact">
                            Szczegóły
                        </a>
                        <a
                            asp-route-id=@entry.Id
                            class="btn btn-danger"
                            asp-action="Delete">
                            Usuń
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h4>0</h4>
}
